<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.LeadActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_lead_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e5e4ec"
        android:layout_alignParentRight="true"
        android:text="直接跳过" 
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        >
        <ImageView 
            android:id="@+id/image_point1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:src="@drawable/adware_style_selected"
      
            />
         <ImageView 
            android:id="@+id/image_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/adware_style_default"
           android:layout_marginLeft="10dp"
            />
         <ImageView 
            android:id="@+id/image_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@drawable/adware_style_default"
           android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</RelativeLayout>