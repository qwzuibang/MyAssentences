<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zxkj.assitance.DecetionActivity" 
    android:orientation="vertical">
  <LinearLayout 
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
        >   
        <ImageView 
           
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
            android:src="@drawable/btn_homeasup_default"
            />
        <TextView 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
            android:text="手机检测"
            android:textSize="25dp"
             android:layout_weight="1"
             android:gravity="center_horizontal"
            />
           <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_child_configs"
          android:visibility="invisible"
        />     
    </LinearLayout>
    <RelativeLayout 
           android:layout_width="match_parent"
            android:layout_height="150dp"   
            android:gravity="center"
        >
 <ProgressBar 
    android:id="@+id/pgb_dection_battery"
    android:layout_width="200dp"
    android:layout_height="80dp"
    style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
 android:layout_marginLeft="30dp"
  
    android:max="100"
    android:progress="50"
     android:progressDrawable="@drawable/layer_list_progess_bar_sft"
    />
 <View 
     android:id="@+id/view_battery"
        android:layout_width="10dp"
        android:layout_height="60dp"   
        android:background="#ff8c00"
        android:layout_toRightOf="@+id/pgb_dection_battery"
        android:layout_marginTop="10dp"
     />
 <TextView 
     android:id="@+id/text_dec_currty_battery"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="56"
       android:textSize="20dp"
       android:textColor="#0000ff"
       android:layout_toRightOf="@+id/view_battery"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="10dp"
     />
 <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="%"
       android:textSize="20dp"
       android:textColor="#0000ff"
       android:layout_toRightOf="@+id/text_dec_currty_battery"
       android:layout_marginTop="30dp"
      
     />
</RelativeLayout>
<ListView 
    android:id="@+id/list_dection"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  
    ></ListView>
</LinearLayout>
