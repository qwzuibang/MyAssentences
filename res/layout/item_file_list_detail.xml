<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:gravity="center">
    <CheckBox 
        android:id="@+id/check_file_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"     
        />
    <ImageView 
        android:id="@+id/img_file_detail_mum"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launchabc"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView 
            android:id="@+id/text_file_name_detail"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcd.avi"
            />
          <TextView 
            android:id="@+id/text_file_data_detail"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.11.24"
            />
        </LinearLayout>
        <TextView 
            android:id="@+id/text_file_size_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234.0k"
            android:paddingRight="15dp"
            />

</LinearLayout>
